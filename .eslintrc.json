{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "react",
        "flowtype"
    ],
    "env": {
        "jest": true,
        "node": true
    },
    "rules": {
        "no-var": "error",
        "prefer-const": [ "error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "semi": ["error", "always"],
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "ignore"
        }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
